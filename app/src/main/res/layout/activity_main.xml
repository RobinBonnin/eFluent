<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.efluent.MainActivity">


    <com.dd.CircularProgressButton
        android:id="@+id/connexionMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/cpb_white"
        app:cpb_cornerRadius="48dp"
        app:cpb_textIdle="@string/LogIn"
        app:cpb_selectorIdle="@drawable/idle_state_selector"
        app:cpb_selectorComplete="@drawable/complete_state_selector"
        app:cpb_colorIndicator="@color/colorPrimary"
        app:cpb_textComplete="Successfully logged in"
        app:cpb_selectorError="@drawable/error_state_selector"
        app:cpb_textError="Wrong username or password, sorry !"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/inscriptionMain"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/connexionMain"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LoginMain"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        tools:ignore="TextFields"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/PasswordMain"
        android:layout_toRightOf="@+id/textView"
        android:layout_below="@+id/LoginMain"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email :"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/textView2"
        android:layout_above="@+id/PasswordMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password :"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/PasswordMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/inscriptionMain"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Title"
        android:id="@+id/error"
        android:text="Error in connexion"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pro"
        android:id="@+id/GoProActivity"
        android:layout_below="@+id/PasswordMain"
        android:layout_alignParentRight="true"
        android:fitsSystemWindows="true"/>

    <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:id="@+id/GoPatientActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" /> -->

</RelativeLayout>
