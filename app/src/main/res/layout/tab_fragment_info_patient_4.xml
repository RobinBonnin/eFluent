<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Commentaires"
        android:textAppearance="?android:attr/textAppearanceLarge"/> -->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_sent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_below="@+id/editText2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView4"
        android:hint="Title"
        android:maxLines="1"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:id="@+id/editText"
        android:layout_below="@+id/editText2"
        android:hint="Message"
        android:gravity="top"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ajouter un commentaire :"
        android:id="@+id/textView4"
        android:layout_toLeftOf="@+id/InfoPatientAddComment"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/InfoPatientAddComment"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Send"
        android:id="@+id/InfoPatientAddComment"
        android:layout_alignEnd="@+id/editText"
        style="@style/btn"/>
</RelativeLayout>