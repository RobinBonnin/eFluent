<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.efluent.ExerciseVocal"
    tools:targetApi="21">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CallMic"
        android:src="@drawable/ic_mic_black_48dp"
        android:layout_marginBottom="106dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listenWord"
        android:src="@drawable/ic_hearing_black_48dp"
        android:layout_marginTop="119dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/WordToPronounce" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Word Here)"
        android:gravity="center"
        android:id="@+id/WordToPronounce"
        android:layout_alignBottom="@+id/listenWord"
        android:layout_alignStart="@+id/CallMic"
        android:layout_alignTop="@+id/listenWord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EXERCICE RECONNAISSANCE VOCALE"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#a81111"
        android:shadowColor="#ec9797" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/playButton"
        android:layout_alignBottom="@+id/CallMic"
        android:layout_toStartOf="@+id/CallMic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stopButton"
        android:layout_alignBottom="@+id/CallMic"
        android:layout_toEndOf="@+id/CallMic" />

</RelativeLayout>
