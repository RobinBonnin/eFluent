<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.efluent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProActivity"
            android:label="@string/title_activity_pro"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddPatientActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InscriptionProActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InfoPatientActivity"
            android:label="@string/title_activity_info_patient"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExerciseVocal"
            android:screenOrientation="portrait" />
        <activity android:name=".GiveExerciseActivity" />
        <activity android:name=".GiveRendezvousActivity" />
        <activity
            android:name=".Sonometre"
            android:label="@string/title_activity_sonometre"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>